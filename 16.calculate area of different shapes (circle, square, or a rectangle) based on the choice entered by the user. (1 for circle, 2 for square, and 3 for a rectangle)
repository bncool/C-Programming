#include <stdio.h>
#include <math.h> 
int main () {
   int a;
 float area;
   printf("enter the area of  1 for cricle ,2 for square  and 3 for rectangle\n");
   scanf("%d",&a); //BIGUL NIRAULA 	
	if (a==1) {
		float r;
		#define pi 3.14
		printf("enter radius \n ");
		scanf("%f",&r);
	area=pi*r*r;
	printf("the area of circle is %f",area);
	}
 else if (a==2) { 
 float s;
 printf("enter the side \n ");
 scanf ("%f",&s);
 area = s*s;
 printf("The area is %f",area);
}
else  {
 	float length,breadth;
 	printf("enter the length and breadth");
 	scanf("%f%f",&length,&breadth); 
 	area=length*breadth;
	 printf("the area is %f",area);
	 }
return 0;
}
