 using if , if else ,else 
#include <stdio.h>
# include <math.h>

int main() {
int a;
printf("\nenter the number");
scanf("%d",&a);	
	if (a>0)  {
		printf("\nthe number is positive "); }
		else if (a==0) {
			printf("\n the number is zero");}
			
		else {
			printf("\n the number is negative");
		}
	
	return 0;
}
